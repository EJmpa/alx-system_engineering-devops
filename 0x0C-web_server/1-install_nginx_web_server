#!/usr/bin/env bash

# Update package lists
apt-get update

# Install Nginx
apt-get install -y nginx

# Configure Nginx to listen on port 80
ufw allow 'Nginx HTTP'
echo "server {
    listen 80;
    root /var/www/html;
    index index.html;
    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
service nginx stop
service nginx start
